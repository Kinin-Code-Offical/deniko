C4Component
    title Component Diagram - Web Application (Next.js App Router)

    Container(web_app, "Web Application", "Next.js", "The main user interface.")

    Component(layout, "Root Layout", "layout.tsx", "Global providers, fonts, and metadata.")
    Component(middleware, "Middleware", "middleware.ts", "Route protection and i18n redirection.")
    
    Boundary(pages, "Pages") {
        Component(landing_page, "Landing Page", "app/[lang]/page.tsx", "Public marketing page.")
        Component(dashboard_page, "Dashboard", "app/[lang]/dashboard/page.tsx", "User specific dashboard.")
        Component(profile_page, "Profile Page", "app/[lang]/users/[username]/page.tsx", "Public/Private user profile.")
    }

    Boundary(components, "UI Components") {
        Component(navbar, "Navbar", "components/navbar.tsx", "Navigation header.")
        Component(auth_forms, "Auth Forms", "components/auth/*", "Login/Register forms.")
        Component(ui_lib, "UI Library", "components/ui/*", "Reusable atomic components (Shadcn).")
    }

    Rel(web_app, middleware, "Routes request through")
    Rel(middleware, layout, "Renders")
    Rel(layout, landing_page, "Contains")
    Rel(layout, dashboard_page, "Contains")
    Rel(landing_page, navbar, "Uses")
    Rel(dashboard_page, ui_lib, "Uses")
